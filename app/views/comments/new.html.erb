<div class="comment-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメント投稿</h1>
        <%= form_for @comment, url: topic_comments_path, method: :post do |f| %>
          <div class="form-group">
            <%= f.label :本文 %>
            <%= f.text_area :content, class: 'form-control' %>
            <%= f.hidden_field :topic_id, :value => params[:topic_id] %>
          </div>
          <%= f.submit 'コメント投稿', class: 'btn btn-block btn-black' %>
        <% end %>
      </div>
    </div>
  </div>
</div>