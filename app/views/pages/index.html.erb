<div class="top-hero-wrapper">
  <div class="container top-hero-container">
    <h1 class="text-white">Movienglish</h1>
    <h2 class="text-white">映画で英語を勉強しよう</h2>
    <% if logged_in? %>
      <div class="row">
        <div class="col-md-offset-3 col-md-3">
          <%= link_to 'マイページ', user_path(current_user.id), class: 'btn btn-block btn-white' %>
        </div>
        <div class="col-md-3">
          <%= link_to 'ログアウト', logout_path, method: :delete, class: 'btn btn-block btn-white' %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-md-offset-3 col-md-3">
          <%= link_to '新規登録', new_user_path, class: 'btn btn-block btn-white' %>
        </div>
        <div class="col-md-3">
          <%= link_to 'ログイン', login_path, class: 'btn btn-block btn-white' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

