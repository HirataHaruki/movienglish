<%= form_with model: @topic do |form| %>
  <div class="form-group">
    <%= form.label :作品名 %>
    <%= form.text_field :title %>
  </div>
  <div class="form-group">
    <%= form.label :作品内容 %>
    <%= form.text_area :description %>
  </div>
  <div class="form-group">
    <%= form.label :難易度 %>
    <%= form.select :level, ['英検1級レベル・TOEIC850点レベル', '英検準1級レベル・TOEIC700点レベル', '英検2級レベル・TOEIC550点レベル', 'その他'] %>
  </div>
  <div class="form-group">
    <%= form.label :お気に入りのセリフ %>
    <%= form.text_area :favorite_line %>
  </div>
          
  <% if logged_in? %>
    <%= form.submit '投稿', class: 'btn btn-block btn-black' %>
  <% end %>
          
<% end %>